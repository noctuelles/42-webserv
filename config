server
{
	listen					0.0.0.0:8080;
	server_name				localhost:8080;
	client_max_body_size	999999999;

	cgi_setup .php php-cgi;

	location / {
		root		www/demo_website/;

		allowed_methods GET;
		cgi_setup .cgi;
	}

	location /error_pages {
		root	www/err_pages/;

		allowed_methods GET;
	}

	location /upload {
		root	www/post/;
		upload_store uploaded_files/;

		allowed_methods GET POST;
	}
}
