server
{
	listen					0.0.0.0:8080;
	server_name				localhost:8080;
	client_max_body_size	999999999;

	location /
	{
		redirect		/cgi;
		autoindex		 on;
		root			www/demo_website/;
		allowed_methods	GET;
	}

	location /cgi
	{
		autoindex on;
		root			cgi-bin/;
		allowed_methods	GET	POST;

		cgi_setup	.py		/usr/bin/python3;
		cgi_setup	.php	/usr/bin/php-cgi;
	}

	location /upload
	{
		root			www/upload/;
		upload_store	www/demo_website/;

		allowed_methods	GET POST DELETE;
	}
}
