server
{
	listen					0.0.0.0:8080;
	server_name				localhost:8080;
	client_max_body_size	1000;

	error_page 404 /error_pages/404.html;
	error_page 405 /error_pages/405.html;

	cgi_setup .php php-cgi;

	location / {
		root		www/demo_website/;

		allowed_methods GET;
		cgi_setup .cgi;
	}

	location /error_pages {
		root	www/err_pages/;

		allowed_methods GET;
	}
}
